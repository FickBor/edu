<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">用户管理</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        用户列表 
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <form id="filter-form">
          <div class="row">
            <div class="col-sm-6">
              <%= link_to  new_user_path, class: 'btn btn-info' do %>
                <li class="fa fa-plus"></li> 新建用户
              <% end -%>
            </div>
            <div class="col-sm-6">
              <div class='input-group'>
                <input class='form-control' placeholder='关键字' type='text' name="search[keyword]" value="<%= @search[:keyword]%>">
                <span class='input-group-btn'>
                  <button class='btn' type='submit'>
                    <i class='fa fa-search'></i>
                  </button>
                </span>
              </div>
            </div>
          </div>
        </form>
        <!-- /#filter-form -->
        <br/>

        <form id="table-form">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th class="check-cell"><input type="checkbox" data-role="check-all"/></th>
                <th>账号</th>
                <th>商家</th>
                <th class='actions'>操作</th>
              </tr>
            </thead>
            <tbody>
<% @users.each_with_index do |record,i| -%>
              <tr class="<%= i.odd? ? 'odd' : 'even'%>">
                <td><input type="checkbox" data-role="checkable" name="ids[]" value="<%=record.id%>"/></td>
                <td><%=record.account%></td>
                <td><%=merchant_name record.merchant%></td>
                <td class="actions">
                  <%= link_to record,title:'查看记录'  do %><i class='glyphicon glyphicon-zoom-in'></i><% end -%>
                  <%= link_to edit_user_path(record),title: '修改记录' do -%>
                    <i class="fa fa-edit"></i>
                  <% end -%>
                  <%= link_to record,  method: :delete,title: '删除记录',data:{ confirm: "您确定要删除记录吗?"} do %>
                    <i class="fa fa-trash"></i>
                  <% end -%>
                </td>
              </tr>
<% end -%>
            </tbody>
          </table>

          <div class='panel-footer'>
            <ul class="pagination pagination-sm">
              <%= will_paginate @users,  renderer: Wonderland::WonderWillLinkRenderer%>
            </ul>
            <div class="pull-right"><%= page_entries_info @users%></div>
          </div>
        </form>
        <!-- /#table-form -->
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
