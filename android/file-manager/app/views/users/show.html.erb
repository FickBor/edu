<%= render 'partials/breadcrumb', breadcrumb: ['用户管理',{title:'用户列表',path: users_path}, {title:"#{user_name @user} 详情", path: @user}]%>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%=user_name @user%> 详情</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class='panel panel-default'>
  <div class='panel-heading'>
    <i class='icon-edit icon-large'></i>
    用户详情
  </div>
  <div class='panel-body'>
    <form class="form-horizontal">
      <fieldset>
        <div class='form-group'>
          <%= label_tag nil,'账号', class: 'col-lg-1 control-label' %>
          <div class="col-lg-11"><p class="form-control-static"><%=@user.account%></p></div>
        </div>
        <div class='form-group'>
          <%= label_tag nil,'姓名', class: 'col-lg-1 control-label' %>
          <div class="col-lg-11"><p class="form-control-static"><%=@user.name%></p></div>
        </div>
      </fieldset>
      <div class='actions'>
        <%= link_to  edit_user_path(@user), class: 'btn btn-info' do %><li class="fa fa-edit"></li> 修改用户<% end -%>
        <%= link_to @user,method: :delete,  class: 'btn btn-danger', data:{confirm: '确认要删除此记录吗？'} do %><li class="fa fa-trash"></li> 删除用户<% end -%>
        &nbsp;&nbsp;
        <%= link_to '返回',users_path%>
      </div>
    </form>
  </div>
</div>

